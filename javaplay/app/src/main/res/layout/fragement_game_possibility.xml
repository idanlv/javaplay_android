<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/game_card_view"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:text="Game Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/game_name_text_view"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold"
            android:textAllCaps="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/game_description_text_view"
            android:text="@string/game_description_stub"
            android:alpha="70"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/game_start_new_match_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            card_view:srcCompat="@drawable/game_play" />

    </LinearLayout>

</android.support.v7.widget.CardView>
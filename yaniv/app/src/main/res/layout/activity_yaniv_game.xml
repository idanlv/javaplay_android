<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_yaniv_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.levigilad.javaplay.yaniv.YanivGameActivity"
    android:theme="@style/FullscreenTheme"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/instructions_text_view"
        android:layout_weight="3"
        android:textAllCaps="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:text="@string/waiting_for_players"
        android:textSize="30sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:baselineAligned="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_card_back_red"
            android:layout_gravity="center_vertical"
            android:id="@+id/deck_image_view"/>

        <StackView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/deck_stack_view"
            android:layout_weight="1" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/participants_status_list_view" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/player_data_linear_layout"
        android:layout_weight="2"
        android:paddingTop="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:text="Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="clip_horizontal"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score_text_view"
                android:gravity="clip_horizontal"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp" />

            <Button
                android:text="Discard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discard_button" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_joker"
            android:id="@+id/card_stub_image_view"
            android:padding="10dp" />

    </LinearLayout>

</LinearLayout>
